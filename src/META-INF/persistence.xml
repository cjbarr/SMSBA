<property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>

<property name="javax.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/smsba?useSSL=false"/>

<property name="javax.persistence.jdbc.user" value="root"/>

<property name="javax.persistence.jdbc.password" value="shyguy"/>

